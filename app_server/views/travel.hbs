{{!-- app_server/views/travel.hbs --}}
<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div id="background">
      <div id="page">

        {{> header}}

        <div id="contents">
          <div class="box">
            <div>
              <div class="body">
                <h1>Travel</h1>

                <ul id="sites">
                  {{#each trips}}
                  <li>
                    <a href="/api/trips/{{code}}"><img src="/images/{{image}}" alt="{{name}}"></a>
                    <h2><a href="/api/trips/{{code}}">{{name}}</a></h2>
                    <p>{{description}}</p>
                  </li>
                  {{/each}}
                </ul>

              </div>
            </div>
          </div>
        </div>

        {{> footer}}

      </div>
    </div>
  </body>
</html>